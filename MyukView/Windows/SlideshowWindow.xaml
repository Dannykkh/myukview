<Window x:Class="MyukView.Windows.SlideshowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="슬라이드쇼"
        WindowState="Maximized"
        WindowStyle="None"
        Background="Black"
        KeyDown="Window_KeyDown"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <!-- 이미지 표시 -->
        <Image x:Name="slideImage"
               Stretch="Uniform"
               RenderOptions.BitmapScalingMode="HighQuality"/>

        <!-- 컨트롤 패널 (마우스 오버 시 표시) -->
        <Border x:Name="controlPanel"
                Background="#AA000000"
                VerticalAlignment="Bottom"
                Height="60"
                Opacity="0">
            <Border.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                           To="1" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                           To="0" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="◀" Click="btnPrevious_Click" Width="50" Height="40" Margin="5"
                        Background="Transparent" Foreground="White" FontSize="20" BorderThickness="0"/>
                <Button x:Name="btnPlayPause" Content="❚❚" Click="btnPlayPause_Click" Width="50" Height="40" Margin="5"
                        Background="Transparent" Foreground="White" FontSize="20" BorderThickness="0"/>
                <Button Content="▶" Click="btnNext_Click" Width="50" Height="40" Margin="5"
                        Background="Transparent" Foreground="White" FontSize="20" BorderThickness="0"/>
                <Button Content="✕" Click="btnClose_Click" Width="50" Height="40" Margin="5"
                        Background="Transparent" Foreground="White" FontSize="20" BorderThickness="0"/>

                <TextBlock x:Name="txtImageInfo" Foreground="White" VerticalAlignment="Center" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
