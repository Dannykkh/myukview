<Window x:Class="MyukView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyukView" Height="600" Width="800">
    <DockPanel>
        <!-- 상단 메뉴 (필요 시 추가로 메뉴바 구현 가능) -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="파일">
                <MenuItem Header="종료" Click="MenuExit_Click"/>
            </MenuItem>
        </Menu>

        <!-- TabControl: 이미지 변환과 영상 처리 영역 분리 -->
        <TabControl DockPanel.Dock="Top">
            <!-- 이미지 변환 탭 -->
            <TabItem Header="이미지 변환">
                <Grid Margin="10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Name="btnLoadImage" Content="이미지 파일 불러오기" Width="150" Height="30" Click="btnLoadImage_Click" Margin="0,0,10,0"/>
                            <Button Name="btnConvertImage" Content="PNG로 변환" Width="150" Height="30" Click="btnConvertImage_Click"/>
                        </StackPanel>
                        <TextBlock Name="txtImageStatus" Text="이미지 작업 상태 표시" Margin="0,0,0,10"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- 영상 처리 탭 -->
            <TabItem Header="영상 처리">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 영상 파일 불러오기 및 음성 추출 -->
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                        <Button Name="btnLoadVideo" Content="영상 파일 불러오기" Width="150" Height="30" Click="btnLoadVideo_Click" Margin="0,0,10,0"/>
                        <Button Name="btnExtractAudio" Content="M4A 추출" Width="150" Height="30" Click="btnExtractAudio_Click"/>

                        <GroupBox Header="오디오 변환 설정" Margin="0,10,0,0">
                            <StackPanel Margin="10">
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="코덱 선택:" Width="80" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbCodec" Width="150">
                                        <ComboBoxItem Content="aac" IsSelected="True"/>
                                        <ComboBoxItem Content="libmp3lame"/>
                                        <ComboBoxItem Content="flac"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="비트레이트:" Width="80" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbBitrate" Width="80" ToolTip="오디오 품질을 설정하세요 (kbps)">
                                        <ComboBoxItem Content="64"/>
                                        <ComboBoxItem Content="96"/>
                                        <ComboBoxItem Content="128"/>
                                        <ComboBoxItem Content="160"/>
                                        <ComboBoxItem Content="192" IsSelected="True"/>
                                        <ComboBoxItem Content="256"/>
                                        <ComboBoxItem Content="320"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="출력 포맷:" Width="80" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbOutputExt" Width="80">
                                        <ComboBoxItem Content=".m4a" IsSelected="True"/>
                                        <ComboBoxItem Content=".mp3"/>
                                        <ComboBoxItem Content=".flac"/>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>

                    <!-- Whisper 설정 영역 -->
                    <GroupBox Header="Whisper 설정" Grid.Row="1" Margin="0,0,0,10">
                        <StackPanel Orientation="Vertical" Margin="10">
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="모델 선택:" VerticalAlignment="Center" Width="80"/>
                                <ComboBox x:Name="cmbModel" Width="120">
                                    <ComboBoxItem Content="base" IsSelected="True"/>
                                    <ComboBoxItem Content="medium"/>
                                    <ComboBoxItem Content="large"/>
                                </ComboBox>
                            </StackPanel>
                            <CheckBox x:Name="chkTimestamp" Content="타임스탬프 포함" Margin="0,5,0,0"/>
                            <CheckBox x:Name="chkSpeaker" Content="화자 분리 (실험적)" Margin="0,5,0,0"/>
                            <CheckBox x:Name="chkMarkdown" Content="서식화된 출력 (줄바꿈/마크다운)" Margin="0,5,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- 텍스트 추출 및 저장 버튼 -->
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,10">
                        <Button Name="btnExtractText" Content="텍스트 추출 (Whisper)" Width="200" Height="30" Click="btnExtractText_Click" Margin="0,0,10,0"/>
                        <Button Name="btnSaveText" Content="텍스트 저장" Width="150" Height="30" Click="btnSaveText_Click"/>
                    </StackPanel>

                    <!-- 추출된 텍스트 출력 영역 -->
                    <TextBox x:Name="txtTranscript" Grid.Row="3" Margin="0" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- 하단 상태 표시 및 진행률 -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="10">
            <TextBlock Name="txtStatus" VerticalAlignment="Center" Text="작업 상태 표시"/>
            <ProgressBar x:Name="progressBar" Height="20" Width="200" Margin="20,0,0,0" Minimum="0" Maximum="100"/>
        </StackPanel>
    </DockPanel>
</Window>
